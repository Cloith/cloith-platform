{
    "name": "Cloith Platform Dev Env",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",
    "runArgs": [
        "--cap-drop=SYS_PTRACE",
        "--security-opt=no-new-privileges"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",              
                "ms-python.vscode-pylance",     
                "redhat.vscode-yaml"            
            ]
        }
    }
}