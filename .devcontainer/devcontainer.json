{
    "name": "Cloith Platform Dev Env",
    "build": {
        "dockerfile": "Dockerfile"
    },
    // This tells Docker to use the host's network stack directly
    "runArgs": [
        "--network=host"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "redhat.ansible",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "redhat.vscode-yaml",
                "tailscale.vscode-tailscale"
            ]
        }
    },
    "remoteUser": "vscode",
    
    // We'll use this to run your 'rebuild' playbook automatically
    // "postCreateCommand": "ansible-playbook container-setup/main.yml"
}